    <script>

        
        var xArray = ["{{.fday}}", "{{.sday}}", "{{.tday}}", "{{.foday}}", "{{.fifday}}","{{.sixday}}","{{.seday}}"];
        var yArray = ['{{.first}}', '{{.second}}', '{{.third}}', '{{.fourth}}', '{{.five}}','{{.six}}','{{.seven}}'];
        
        var data = [{
          x: xArray,
          y: yArray,
          type: "bar"  }];
        var layout = {title:"Day by day collection from last week"};
        
        Plotly.newPlot("myPlot", data, layout);
        
        // charts differentiated here
        
        google.charts.load('current', {'packages':['corechart']});
        google.charts.setOnLoadCallback(drawChart);
        
        function drawChart() {
        var data = google.visualization.arrayToDataTable([
          ['Contry', 'Revenue'],
          ['Jan',150000],
          ['Feb',290000],
          ['Mar',300000],
          ['Apr',200000],
          ['May','{{.may}}'],
          ['Jun','{{.june}}'],
          ['Jul',0],
          ['Aug',0],
          ['Sep',0],
          ['Oct',15],
          ['Nov',15],
          ['Dec',15],
        ]);
        
        var options = {
          title:'Monthly Revenue'
        };
        
        var chart = new google.visualization.BarChart(document.getElementById('myChart'));
          chart.draw(data, options);
        }
        
        
        // third chart from here
        window.onload = function() {
        
        var chart = new CanvasJS.Chart("chartContainer", {
            theme: "light2", // "light1", "light2", "dark1", "dark2"
            exportEnabled: true,
            animationEnabled: true,
            // title: {
            //     text: "Yearly Revenue Generation"
            // },
            data: [{
                type: "pie",
                startAngle: 25,
                toolTipContent: "<b>{label}</b>: {y}%",
                showInLegend: "true",
                legendText: "{label}",
                indexLabelFontSize: 16,
                indexLabel: "{label} - {y}%",
                dataPoints: [
                    { y: 93, label: "2022" },
                    { y: 2, label: " 2021" },
                    { y: 1, label: "2020" },
                    { y: 1, label: "2019" },
                    { y: 1, label: "2018" },
                    { y: 1, label: "2017" },
                    { y: 1, label: "2016" }
                ]
            }]
        });
        chart.render();
        
        }
        
            </script>
